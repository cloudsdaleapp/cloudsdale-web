source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Production dependencies
gem 'therubyracer'
gem 'execjs'

# Database
gem 'mysql2'
gem 'sqlite3'
gem 'redis'

# Markup
gem 'haml'
gem 'haml-rails'

# Authentication & Authorization
gem 'omniauth'
