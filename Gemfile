# Forms
gem 'client_side_validations'

# Images and Image manipulation
gem 'carrierwave'

# Chat
gem 'faye'

# Workers
gem 'resque', :require => "resque/server"

# Assets
gem 'sass'
gem 'sass-rails'
gem 'coffee-script'
gem 'uglifier'
gem 'jquery-rails'
gem 'sprockets'

group :development, :test do
  gem 'pry'
  gem 'foreman'
end




gem 'capistrano'