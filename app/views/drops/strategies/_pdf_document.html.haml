%header  
  = link_to truncate(drop.title, :length => 60), drop.url, target: '_blank', data: { 'skip-pjax' => true }, class: 'title'
.drop-content
  .float-left
    = link_to drop.url, target: '_blank', data: { 'skip-pjax' => true }, class: 'preview' do
      - if image_tag drop.preview.url
        = image_tag drop.preview.url, :title => drop.title

  .info
    - unless drop[:metadata]['page_count'].nil?
      %span.pages= "#{drop[:metadata]['page_count']} pages"
    - unless drop[:metadata]['pdf_version'].nil?
      %span.version= "PDF Version: #{drop[:metadata]['pdf_version']}"
      
    