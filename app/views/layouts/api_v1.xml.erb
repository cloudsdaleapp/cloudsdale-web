<?xml version="1.0" encoding="UTF-8"?>
<status>
  <%= response.status %>
</status>
<errors>
  <%= errors.to_xml.html_safe %>
</errors>
<flash>
  <%= unless @flash_message.nil? %>
    <type>
      <%= @flash_message['type'].html_safe %>
    </type>
    <title>
      <%= @flash_message['title'].html_safe %>
    </title>
    <message>
      <%= @flash_message['message'].html_safe %>
    </message>
  <% end %>
</flash>
<result>
  <%= yield %>
</result>