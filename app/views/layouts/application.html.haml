!!! 5
%html
  %head
    %title Cloudsdale
    = stylesheet_link_tag "application"
    = stylesheet_link_tag params[:controller]
    = javascript_include_tag "application"
    = javascript_include_tag params[:controller]
    = csrf_meta_tags
    = yield :head

  %body
    #wrapper
      - if flash[:notice] or flash[:error]
        #flash
          = image_tag "rainbowdash-announcer.png", :id => "flash_announcer"
          %p#flash_bubble{ :class => "#{ flash[:error] ? 'error' : 'notice' }"}
            = image_tag "details/flash_bubble_cone.png", :id => "flash_bubble_cone"
            = flash[:notice]
            = flash[:error]
      #header
        = yield :header
      #navigation
        %ul.nav.left
          %li.home
            = link_to "Home", root_path
          //%li.chat
          //  = link_to "Chat", ""
          //%li.nav_item.library
          //  = link_to "Library", ""
          //%li.nav_item.gallery
          //  = link_to "Gallery", ""
        %ul.nav.right.auth
          - if current_user
            %li= link_to "Log out", logout_path
          - else
            %li
              = link_to "Sign in", login_path
            %li or
            %li
              = link_to "Saddle up", new_user_path
            %li maybe connect with
            %li= link_to image_tag("icons/cloud/facebook_cloud.png"), "/auth/facebook"
            %li= link_to image_tag("icons/cloud/twitter_cloud.png"), "/auth/twitter"
            
      #content
        = yield

