.topbar
  .fill
    .container-fluid.main
      = link_to  root_path, :class => 'brand' do
        = image_tag "logo/cloudsdale-thin-bright-logo-small.png", :title => "Cloudsdale", :class => "logo"
      
      = form_tag search_index_path, remote: true, method: :post, class: 'pull-left', id: 'search-main', data: { triggerFor: 'search' } do
        = text_field_tag :q, '', placeholder: 'Search...'
       
      %ul.nav.secondary-nav
        %li
          = link_to "/articles/new", class: 'submit' do
            = image_tag("icons/iconic/white/pen_12x12.png")
            %span Submit
        %li
          = link_to user_path(current_user), class: 'profile' do
            = image_tag("icons/iconic/white/user_9x12.png")
            %span Profile
        %li
          = link_to "/", class: 'explore disabled-link' do
            = image_tag("icons/iconic/white/compass_12x12.png")
            %span Explore
        %li
          = link_to edit_user_path(current_user), class: 'settings' do
            = image_tag("icons/iconic/white/cog_12x12.png")
            %span Settings
        %li
          = link_to "/", class: 'help disabled-link' do
            = image_tag("icons/iconic/white/question_mark_6x12.png")
            %span Help
        %li
          = link_to logout_path, 'data-skip-pjax' => true, class: 'logout' do
            = image_tag("icons/iconic/white/denied_12x12.png")
            %span Sign Out
      
    .container-fluid.extras.account-wrapper{ data: { extrasContainer: 'account' } }
      %ul.media-grid.large
        
          
    .container-fluid.extras.search-wrapper{ data: { extrasContainer: 'search' } }
      .row
        .span-one-third{ data: { searchResultContainer: 'clouds' } }
          %h6
            = image_tag "icons/iconic/white/cloud_16x10.png"
            Clouds
            %span.metadata= ""
          %ul.results
          %nav
            %a more »
        .span-one-third{ data: { searchResultContainer: 'entries' } }
          %h6
            = image_tag "icons/iconic/white/pen_12x12.png"
            Entries
            %span.metadata= ""
          %ul.results
          %nav
            %a more »
        .span-one-third{ data: { searchResultContainer: 'users' } }
          %h6
            = image_tag "icons/iconic/white/user_9x12.png"
            Users
            %span.metadata= ""
          %ul.results
          %nav
            %a more »