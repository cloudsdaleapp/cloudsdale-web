  %head
    %title Cloudsdale Admin
    = favicon_link_tag "favicons/48by48.ico"
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

    = stylesheet_link_tag    "admin", media: "all"
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags

  %body
    #head-wrap
      .row.top-bar-wrapper
        .large-12.columns
          .contain-to-grid
            %nav.top-bar
              %ul.title-area
                %li.name
                  %h1
                    = link_to root_path, style: 'display: block;' do
                      .logo{ style: 'display: inline; height: 32px; width: 32px; float: left; margin: 6px 0px 7px 8px;' }
                      %span= "Admin"
                %li.toggle-topbar.menu-icon
                  %a{:href => "#", style: 'min-width: 100px;' }
                    %span= "Menu"
              %section.top-bar-section
                %ul.left
                  %li.divider
                  %li= link_to "Dashboard", root_path
                  %li.divider
                  %li= link_to "Dispatches", dispatches_path
                  %li.divider
                  %li= link_to "Workers", "/workers"
                  %li.divider

                %ul.right
                  %li.divider
                  %li
                    = link_to "‚Üê Back to Cloudsdale", root_url(subdomain: 'www')
                  %li.divider

    .container#body-wrap
      - if content_for?(:legend)
        #legend.developer-legend
          = render 'layouts/flash_error'
          = render 'layouts/flash_notice'
          = render 'layouts/flash_success'
          = yield(:legend)
      - else
        = render 'layouts/flash_error'
        = render 'layouts/flash_notice'
        = render 'layouts/flash_success'
      = yield
      / = AvatarDispatch::ALLOWED_SIZES.join(", ")
    = render 'layouts/page_footer'
    = javascript_include_tag "admin"
