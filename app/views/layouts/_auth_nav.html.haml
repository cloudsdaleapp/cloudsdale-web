- show_login = show_login || false
- show_register = show_register || false
- show_forgot_password = show_forgot_password || false
%br
.row
  .large-12.large-centered.columns
    .row
      .large-12.small-12.columns
        %nav.top-bar{ style: 'margin-bottom: 0; border-top: 1px solid #d8d8d8;' }
          %ul.title-area
            %li.name= ""
            %li.toggle-topbar.menu-icon
              %a{:href => "#", style: 'min-width: 100px;' }
                %span= "More"
          %section.top-bar-section
            %ul.left
              %li= link_to "‚Üê Home", root_path
              %li.divider
            %ul.right
              - if show_login
                %li.divider
                %li= link_to "Login", login_path
              - if show_register
                %li.divider
                %li= link_to "Register", register_path
              - if show_forgot_password
                %li.divider
                %li= link_to "Forgot Password?", password_reset_path
