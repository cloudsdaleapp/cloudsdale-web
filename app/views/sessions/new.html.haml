%br
.row
  .large-6.large-centered.columns
    .row.auth-header
      .large-5.small-5.columns
        .auth-icon{ style: 'float: left;' }= image_tag current_user.dynamic_avatar_url
      .large-5.small-5.columns
        .auth-icon.auth-icon-default{ style: 'float: right;' }= image_tag "icon/icon_auth_gray.png"
%br
.row
  .large-6.large-centered.columns
    .content-panel
      .content-panel-inner.panel-expand
        .row
          %br
          %br
          %center
            %h3.subheader= "Login"

        %br
        .row
          .large-8.small-12.large-centered.columns
            %div{ style: 'margin: 20px;' }
              = simple_form_for @session, url: login_path, method: :post do |f|
                = f.input :identifier, as: :email,    label: false, placeholder: "Email or Username"
                = f.input :password,   as: :password, label: false, placeholder: "Password"
                %br
                = f.submit "Login", class: 'button success', style: 'width: 100%;'

        = render 'layouts/auth_nav', show_register: true, show_forgot_password: true
