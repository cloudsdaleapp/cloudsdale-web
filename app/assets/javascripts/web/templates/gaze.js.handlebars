<div class="row">
  <div class="small-12 large-12 columns">
    <div class="row">
      <br/>
      <div class="small-12 large-12 pull-0 columns">
        <div class="right">
          <a href="#" data-dropdown="categories-dropdown" class="button dropdown secondary small">Category</a>
          <ul id="categories-dropdown" class="f-dropdown">
            <li>{{#linkTo "gaze.category" "casual"}}Casual{{/linkTo}}</li>
            <li>{{#linkTo "gaze.category" "roleplay"}}Role Play{{/linkTo}}</li>
          </ul>
        </div>
        <h6>Today's Spotlights:</h6>
        <hr/>
        <div class="row">
          {{#each spotlights}}
            {{view Cloudsdale.Gaze.SpotlightView contentBinding=this}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>