Cloudsdale.Gaze ||= Ember.Namespace.create()
Cloudsdale.Gaze.SpotlightView = Ember.View.extend(

  templateName: 'gaze/spotlight'
  classNames: ['small-12','columns']
  tagName: 'div'

  classNameBindings: ['spotlightSizeClass']

  spotlightSizeClass: ( ()->
    if (@get('_parentView.contentIndex') % 3) == 2 then 'large-12' else 'large-6'
  ).property("_parentView.contentIndex")

)