.sidebar-header
  %a.close{ href: '#', data: { dismiss: 'dialog' } }= "Ã—"
  = @model.get('name')
%ul.sidebar-list
  / - if _.include(@topic.get('moderator_ids'), session.get('user').id) and _.include(@topic.get('moderator_ids'), @model.id) == false
  /   %li.sidebar-item.sidebar-item-using-icon
  /     %a{ href: "#", 'data-action' => 'prosecute' }
  /       %span.sidebar-item-name= "Prosecute"
  /         %i.icon-screenshot.icon-white
  - if session.isModerator()
    %li.sidebar-item.sidebar-item-using-icon
      %a{ href: "#", 'data-action' => 'ban' }
        - if @model.get('is_banned')
          %span.sidebar-item-name
            %i.icon-repeat.icon-white
            = "Unban"
        - else
          %span.sidebar-item-name
            %i.icon-off.icon-white
            = "Ban"

  - if @model.get('skype_name')
    %li.sidebar-item.sidebar-item-using-icon
      %a{ href: "skype:#{@model.get('skype_name')}?add", 'data-action' => 'skype:add', target: "_blank" }
        %span.sidebar-item-name
          %i.icon-plus-sign.icon-white
          = "Add on Skype"
    %li.sidebar-item.sidebar-item-using-icon
      %a{ href: "skype:#{@model.get('skype_name')}?call", 'data-action' => 'skype:call', target: "_blank" }
        %span.sidebar-item-name
          %i.icon-exclamation-sign.icon-white
          = "Call on Skype"

.sidebar-header
  = "Avatar"
.sidebar-block
  %center
    %a{ href: @model.get('avatar').normal, target: '_blank' }
      %img{ src: @model.get('avatar').normal, style: 'max-width: 100%; margin: 47px auto' }
